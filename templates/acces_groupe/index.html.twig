{% extends 'base.html.twig' %}

{% block title %}AccesGroupe index
{% endblock %}
{% block navbar_right %}
	<li class="nav-item">
		<a href="{{ path('acces_groupe_new') }}" class="btn btn-float text-default btn-blue">
			<i class="icon-add"></i>
			<span>
				{{'compte.Create_new'| trans}}</span>
		</a>
	</li>
{% endblock %}
{% block navbar_left %}{% endblock %}
{% block body %}

	<table class="table">
		<thead>
			<tr>
				<th>Groupe</th>
				<th>l'Acces</th>
				<th>Active</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for acces_groupe in acces_groupes %}
				<tr>
					<td>{{ acces_groupe.groupe.groupe }}</td>
					<td>{{ acces_groupe.acces.nom }}</td>
					<td>{{ acces_groupe.isAcces ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('acces_groupe_show', {'id': acces_groupe.id}) }}">show</a>
						<a href="{{ path('acces_groupe_edit', {'id': acces_groupe.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('acces_groupe_new') }}">Create new</a>
{% endblock %}
