{% extends 'base.html.twig' %}

{% block title %}
	{{ 'user.Detail_user'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('user_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'user.titre_user'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('user_edit', {'id': user.id}) }}">{{'user.Edit'| trans}}</a>
		{{ include('user/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('user_index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'user.titre_user'| trans}}</h4>
{% endblock %}
{% block body %}
	 
	<table class="table">
		<tbody>
			<tr>
				<th>{{ 'user.Nom'| trans }}</th>
				<td>{{ user.nom }}</td>
			</tr>
			<tr>
				<th>{{ 'user.Prenom'| trans }}</th>
				<td>{{ user.Prenom }}</td>
			</tr>
			<tr>
				<th>{{ 'user.titre_user'| trans }}</th>
				<td>{{ user.email }}</td>
			</tr>

			<tr>
				<th>{{ 'user.Groupe'| trans }}</th>
				<td>{{ user.groupe.nom }}</td>
			</tr>
		</tbody>
	</table>

 
{% endblock %}
