<div class="row align-items-end mb-4">
    <div class="col-lg-4">
        <div class="form-group mb-4">
            {{ form_label(form.date_decision) }}
            {{ form_widget(form.date_decision) }}
        </div>
        <label class="cs-label mb-0">Décision</label>

        <div class="row">
            <div class="col-lg-6">
