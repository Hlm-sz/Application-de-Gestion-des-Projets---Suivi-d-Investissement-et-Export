            {{ form_row(form.Transfere_au_Ministere, {label_attr: {class: 'switch-custom'} }) }}
        </div>
        <div class="form-group con_decision mb-2 mt-2" id="doctm">
            {{ form_widget(form.document_TM) }}
        </div>
        <div class="form-group con_decision mb-2 mt-2">
            {{ form_widget(form.date_TM) }}
        </div>

        <div class="form-group mb-2 mt15 form-control d-flex justify-content-between align-items-center"
            style="margin-top: 98px;">
            <label class="cs-label mb-0">Partenaire</label>
            {{ form_row(form.Partenaire, {label_attr: {class: 'switch-custom'} }) }}
        </div>

        <div class="divimb4"></div>
    </div>
    <div class="col-lg-4">
        <div class="form-group mb-2 d-flex form-control justify-content-between align-items-center">
