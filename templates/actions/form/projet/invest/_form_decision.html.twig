            {{ form_row(form.Convention, {label_attr: {class: 'switch-custom'} }) }}

        </div>
        <div class="form-group con_decision mb-2 mt-2" id="docconv">
            {{ form_widget(form.document_convention) }}
        </div>
        <div class="form-group con_decision mb-2" style="margin-top: 65px;">
            <label class="cs-label mb-2"
                style="font-weight: 400;letter-spacing: 0px;color: rgb(102 101 100 / 0.51);">Date signature</label>
            {{ form_widget(form.date_signature_convention) }}
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group form-control mb-2 d-flex justify-content-between align-items-center">
            <label class="cs-label mb-0">Autre document</label>
            {{ form_row(form.Autre_document, {label_attr: {class: 'switch-custom'} }) }}
        </div>
        <div class="form-group con_decision mb-2 mt-2" id="docdes">
            {{ form_widget(form.document_desicion) }}
        </div>
        <div class="form-group con_decision mb-2" style="margin-top: 98px;">
            {{ form_widget(form.type_specifier) }}
        </div>
        <div class="form-group con_decision mb-0">
            <label class="cs-label mb-0"
                style="font-weight: 400;letter-spacing: 0px;color: rgb(102 101 100 / 0.51);">Date du Document ET PV de
                Clôture</label>
            {{ form_widget(form.date_PV_decision) }}
        </div>
        <div class="form-group con_decision mt-2" id="docpv">
            {{ form_row(form.document_PV_de) }}
        </div>

    </div>
    <div class="col-lg-6">

        <div class="form-group form-control mb-2 d-flex justify-content-between align-items-center">
            <label class="cs-label mb-0">Réalisé</label>
            {{ form_row(form.Realise, {label_attr: {class: 'switch-custom'} }) }}
        </div>

        <div class="form-group form-control mb-2 d-flex justify-content-between align-items-center">
            <label class="cs-label mb-0">Non Réalisé</label>
            {{ form_row(form.NonRealise, {label_attr: {class: 'switch-custom'} }) }}
        </div>


    </div>
    <div class="col-lg-6">

    </div>

</div>
<div class="row  mb-4">
    <div class="col-lg-4">
        <div class="form-group con_decision mt-2" id="pvnonabouti">
            <label class="cs-label mb-0">PV Clôture</label>
            {{ form_row(form.pv_cloture_nabouti) }}
            <div class="form-group con_decision mb-2 mt-2">
                {{ form_widget(form.date_pv_cloture_nabouti) }}
            </div>
        </div>
    </div>
</div>



