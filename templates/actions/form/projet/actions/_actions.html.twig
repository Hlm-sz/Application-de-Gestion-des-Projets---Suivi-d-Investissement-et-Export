<div class="header">
    <ul>
        <li class="active title-btn capitalize">Action Réalisée</li>
    </ul>
</div>
<div class="item-details">

    <div class="item-details-body" style="padding-left: 20px;padding-right: 20px;">

        <div class="tab-content cs-tab-content">
            <div class="tab-pane fade show active" id="item-details-project" role="tabpanel">
                <div class="container-fluid">
                    <div class="row align-items-end mb-4">
                        <div class="col-lg-4">
                            <div class="form-group mb-2">
                                <label class="cs-label">Date</label>
                                {{ form_widget(form.Date_reali) }}
                            </div>
                            <div class="form-group mb-2">
                                <label class="cs-label">Action</label>
                                {{ form_widget(form.Action_realise) }}
                            </div>
                            <div class="form-group mb-2">
                                <label class="cs-label">Objet</label>
                                {{ form_widget(form.ObjetComptes) }}
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group mb-2">
                                <label class="cs-label">Détails</label>
                                {{ form_widget(form.detail_libre_realise) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>