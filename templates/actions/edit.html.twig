{% extends 'base.html.twig' %}

{% block title %}
	{{ 'projet.Edit_projet'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('projets_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'projet.titre_projet'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}{% endblock %}
{% block header_search %}
	<form class="form-inline" action="{{ path('projets_index') }}" method="get">
		<input class="form-control mr-sm-2" name="search" type="search" placeholder="Chercher" aria-label="Chercher">
	</form>
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('projets_index') }}">{{'projet.Back_to_list'| trans}}</a>
	<h4 class="navbar-text-color">{{'projet.Edit_projet'| trans}}</h4>
{% endblock %}
{% block body %}
	<div class="card">
		<div class="card-body">

			{{ include('projets/_form.html.twig', {'button_label': 'projet.Update'| trans }) }}

		</div>
	</div>
{% endblock %}
