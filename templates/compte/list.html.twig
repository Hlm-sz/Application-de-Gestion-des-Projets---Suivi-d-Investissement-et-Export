{% extends 'base.html.twig' %}

{% block title %}
	{{'compte.Liste_compte'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('compte_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'compte.Compte'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<li class="nav-item">
		<a href="{{ path('compte_new') }}" class="btn btn-float text-default btn-blue">
			<i class="fa fa-plus"></i>
		</a>
	</li>
{% endblock %}
{% block navbar_left %}{% endblock %}
{% block body %}

	<div class="table-responsive">
		<table id="data-table" width="100%" class="table table-bordered table-striped responsive nowrap">
			<thead>
				<tr>
					<th>{{'compte.NomCompte'| trans}}</th>
					<th>{{'compte.Categorie'| trans}}</th>
					<th>{{'compte.CentreDecision'| trans}}</th>
					<th>{{'compte.Secteurs'| trans}}</th>
					<th>{{'compte.Signalement'| trans}}</th>
					<th>{{'compte.Type'| trans}}</th>
					<th>{{'compte.Actions'| trans}}</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
	{% block javascripts %}
		<script>
			$(document).ready(function () {

$('#data-table').DataTable({
pageLength: 10,
destroy: true,
searching: true,
ajax: {
"url": "{{ path('ajax_compte_all') }}",
"type": "GET",
"dataType": "json"

},
columnDefs: [
{
"targets": 6,
"orderable": false
}
],
columns: [
{
"data": "nomcompte"
},
{
"data": "categorie"
},
{
"data": "centredecision"
},
{
"data": "secteurs"
}, {
"data": "signalement"
}, {
"data": "type"
}, {
"data": "actions"
}
],
"language": {
"sProcessing": "Traitement en cours...",
"sSearch": "Rechercher&nbsp;:",
"sLengthMenu": "Afficher &nbsp; : &nbsp; _MENU_",
"sInfo": "Affichage des &eacute;l&eacute;ments _START_ &agrave; _END_ sur _TOTAL_",
