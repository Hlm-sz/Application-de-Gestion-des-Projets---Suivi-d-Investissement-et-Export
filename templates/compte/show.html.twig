{% extends 'base.html.twig' %}

{% block title %}
	{{'compte.Detail_compte'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('compte_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'compte.Compte'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('compte_edit', {'id': compte.id}) }}">{{'compte.Edit'| trans}}</a>
	{{ include('compte/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('compte_index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'compte.Detail_compte'| trans}}</h4>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>{{'compte.Logo'| trans}}</th>
						<td><img src="{{ asset("uploads/"~ (compte.logo ? compte.logo.filename: 'logo_default.png')) }}" /></td>
					</tr>
					<tr>
						<th>{{'compte.NomCompte'| trans}}</th>
						<td>{{ compte.nomCompte }}</td>
					</tr>
					<tr>
						<th>{{'compte.Categorie'| trans}}</th>
						<td>{{ compte.categorie ? 'Installé au Maroc' : 'Non Installé' }}</td>
					</tr>
					<tr>
						<th>{{'compte.CentreDecision'| trans}}</th>
						<td>{{ compte.centreDecision ? compte.centreDecision.nom : '' }}</td>
					</tr>
					<tr>
						<th>{{'compte.ChiffreAffaires'| trans}}</th>
						<td>{{ compte.chiffreAffaires }}</td>
					</tr>
					<tr>
						<th>{{'compte.DetailLibre'| trans}}</th>
						<td>{{ compte.detailLibre }}</td>
					</tr>
					<tr>
						<th>{{'compte.Signalement'| trans}}</th>
						<td>{{ compte.Signalement ? 'Yes' : 'No' }}</td>
					</tr>
					<tr>
						<th>{{'compte.Type'| trans}}</th>
						<td>{{ compte.type ? compte.type.nom : '' }}</td>
					</tr>
					<tr>
						<th>{{'compte.PaysSiege'| trans}}</th>
						<td>{{ compte.paysSiege ? compte.paysSiege.nom : '' }}</td>
					</tr>
					<tr>
						<th>{{'compte.paysImplantationSuccursales'| trans}}</th>
						<td>
							{% for liste_paysIS in compte.paysImplantationSuccursales %}
								{{  liste_paysIS.nom  }}
								<br>
							{% else %}
								{{ '' }}
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>{{'compte.Secteurs'| trans}}</th>
						<td>
							{% for liste_secteur in compte.secteurs %}
								{{  liste_secteur.nom  }}
								<br>
							{% else %}
								{{ '' }}
							{% endfor %}
						</td>
					</tr>
					<tr>

						<th>{{'compte.EcosystemeFiliere'| trans}}</th>
						<td>
							{% for liste_paysESF in compte.ecosystemeFiliere %}
								{{  liste_paysESF.nom  }}
								<br>
							{% else %}
								{{ '' }}
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>{{'compte.EtatCompte'| trans}}</th>
						<td>{{ compte.etatCompte ? compte.etatCompte.nom : compte.etatCompte }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
