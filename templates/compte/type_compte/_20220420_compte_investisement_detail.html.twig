<div class="col-lg-12 content-infos">

    <div class="item-details">

        <div class="item-details-body">

            <div class="tab-content ">

                <div class="tab-pane fade show active" id="item-details-project" role="tabpanel">
                    {#  #}
                    <div class="row align-items-end mb-4">
                        <div class="col-lg-6">
                            <div class="form-group mb-0">
                                <label class="cs-label">Nom du compte</label>
                                {# <input class="form-control" type="text" placeholder="Construction de site de Melloussa à Tanger"> #}

                                {{ form_widget(form.nomCompte, { 'attr':{'disabled':'disabled'}}) }}
                            </div>

                        </div>
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-2 d-flex justify-content-between align-items-center">
                                        <label class="cs-label mt10 mb-0">Installé au Maroc</label>
                                        {# {{ form_widget(form.categorie, {value : compte.categorie,label:false,label_attr: {class: ''} }) }} #}
                                        {{ form_widget(form.categorie, {label:false,label_attr: {class: 'switch-custom'},'attr':{'disabled':'disabled'} }) }}

                                        {#  <label class="cs-checkbox">
                                            <input type="checkbox">
                                            <span>&nbsp;</span>
                                        </label> #}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-2 d-flex justify-content-between align-items-center">
                                        <label class="cs-label mb-0">Type</label>
                                        {#  <select class="form-control">
                                            <option>Donneur d’Ordre</option>
                                        </select> #}
                                        {{ form_widget(form.type, { 'attr':{'disabled':'disabled'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {# End row first #}
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group mb-4">
                                <label class="cs-label">Pays de siège</label>
                                {# <select class="form-control">
                                    <option>Lorem ipsum</option>
                                </select> #}
                                {{ form_widget(form.paysSiege, { 'attr':{'disabled':'disabled'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                <label class="cs-label">Centre de décision</label>
                                {#  <select class="form-control">
                                    <option>France</option>
                                </select> #}

                                {{ form_widget(form.centreDecision, { 'attr':{'disabled':'disabled'}}) }}


                            </div>
                            <div class="form-group">
                              {% if compte.type.id == 2 %}
                              <div class="form-group mb-4">
                                    <label class="cs-label">CA à l’Export (Millions /Dhs) </label>
                                    {#  <input type="text" class="form-control"> #}
                                    {{ form_widget(form.CA_Export,{ 'attr':{'disabled':'disabled'}}) }}

                                </div>
                              {% else %}
                               <div class="form-group mb-4">
                                    <label class="cs-label">CA à l’Export (Millions /Dhs) </label>
                                    {#  <input type="text" class="form-control"> #}
                                    {{ form_widget(form.CA_Export,{ 'attr':{'disabled':'disabled'}}) }}
                                </div>
                              {% endif %}
                                
                                <div class="form-group mb-4">
                                    <label class="cs-label">Chiffre d’affaires (Milliers/DHs) </label>
                                    {#  <input type="text" class="form-control" placeholder="200000"> #}
                                    {{ form_widget(form.chiffreAffaires, { 'attr':{'disabled':'disabled'}}) }}
                                    {#  {{ form_widget(form.Secteur) }} #}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row">
                                <div class="col-lg-4 form-group mb-2">
                                    <label class="cs-label">Pays d’implantations / Succursales </label>
                                    {{ form_widget(form.paysImplantationSuccursales,{ 'attr':{'disabled':'disabled'}}) }}
                                </div>
                                <div class="col-lg-4 form-group mb-2">
                                    <label class="cs-label">Secteurs </label>

                                    {{ form_widget(form.secteurs,{ 'attr':{'disabled':'disabled'}}) }}

                                </div>
                                <div class="col-lg-4 form-group mb-2">
                                    <label class="cs-label">Ecosystème/Filière </label>
                                    {{ form_widget(form.ecosystemeFiliere,{ 'attr':{'disabled':'disabled'}}) }}
                                </div>
                                       {# <div class="col-lg-4 form-group mb-4">
                                           <label class="cs-label">Description du projet</label>
                                           {{ form_widget(form.description_projet) }}
                                       </div> #}
                                       <div class="col-lg-12 form-group">
                                           <label class="cs-label">Description de l'activité </label>
                                           {#  <textarea rows="5" class="form-control" placeholder="Lorem ipsum"></textarea> #}
                                           {{ form_widget(form.description_activite,{attr: {rows: '10'},'attr':{'disabled':'disabled'} }) }}
                                       </div>

                                       <div class="col-lg-12 form-group">
                                           <label class="cs-label">Détail libre</label>
                                           {#  <textarea rows="5" class="form-control" placeholder="Lorem ipsum"></textarea> #}
                                           {{ form_widget(form.detailLibre,{attr: {rows: '10'},'attr':{'disabled':'disabled'} }) }}
                                       </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
 <div style="display: none;">
 {{ form_widget(form.etatCompte) }}
 {{ form_widget(form.signalement) }}
 {{ form_widget(form.responsableCompte) }}
 {{ form_widget(form.logo) }}
</div>
