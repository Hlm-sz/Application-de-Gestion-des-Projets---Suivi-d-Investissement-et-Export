$(document).ready(function() {
    $('.responsableCompte').select2();
	$('.paysSiege').select2();
	$('.paysImplantationSuccursales').select2();
	$('.secteurs').select2();
	$('.ecosystemeFiliere').select2();	
    $('.centreDecision').select2();	
});
</script>