{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/_style.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block title %}
	{{ 'event.Event'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('events_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'event.Event'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
    <form id="delete-form" method="post" action="{{ path('event_delete', {'id': event.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
        <button class="btn btn-blue" id="delete-item">
            <i class="fa fa-trash"></i>
        </button>
    </form>
	<a class="btn btn-blue" href="{{ path('event_edit', {'id': event.id}) }}">
        <i class="fa  fa-pencil"></i>
    </a>
{% endblock %}
{% block navbar_left %}
    <a class="btn btn-blue" href="{{ app.request.headers.get('referer') }}">
        <i class="fa fa-arrow-left"></i>
    </a>
{% endblock %}
{% block third_header %}
	{{ include('event/third_header/_third_header.html.twig') }}

{% endblock %}
{% block body %}
    <div class="item-details wrape-contact-details">
        <div class="item-details-body item-details-event item-bg-none">

                <div class="row">
                    <!-- content body -->
                    <div class="col-md-8 content-info event-info-event ">
                        <div class="header">
                            <ul>
                                <li class="active title-btn">
                                    Information Event
                                </li>
                            </ul>
                        </div>
                        <div class="item-details">
                            <div class="item-details-body item-details-contact item-bg-none event-details">

                                <div class="tab-content cs-tab-content cs-tab-contact">
                                    <div class="tab-pane fade show active" id="item-details-project" role="tabpanel">
                                        <div class="row align-items-start mb-4">


                                            <div class="col-md-6">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Nom de l’événement</label>

                                                    <label class="input-clone form-control"> {{ event.nom }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Mois</label>

                                                    <label class="input-clone form-control"> {{ event.mois }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Année</label>

                                                    <label class="input-clone form-control"> {{ event.annee }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Pays</label>

                                                    <label class="input-clone form-control"> {{ event.pays.nom }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Secteur</label>

                                                    <label class="input-clone form-control"> {{ event.secteur.nom }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Format de participation</label>

                                                    <label class="input-clone form-control"> {{ event.formatParticipation }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Organisateur</label>

                                                    <label class="input-clone form-control"> {{ event.Organisateur }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Partenaires</label>

                                                    <label class="input-clone form-control"> {{event.partenaires == null ? "&nbsp;" : event.partenaires }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Type d’événement</label>

                                                    <label class="input-clone form-control"> {{event.typeEvenement }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-0">
                                                    <label class="cs-label d-block">Description</label>

                                                    <textarea class="textarea-clone form-control"> {{event.description == null ? "&nbsp;" : event.description  }}</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- content sidebar -->
                    <div class="col-md-4 sidbar-compte">
                        <div class="comment events-holder">
                            <div class="header">
									<ul>
										<li class="active title-btn">
											Comptes
										</li>
									</ul>
							</div>
                            <div class="card-container">
                                {# {% for compte in comptes %}
                                    <div class="ecard">
                                        <div class="firstinfo"><img  src="{{ compte.logo ? asset('images/',compte.logo) : asset('images/Image-33.png') }}" >
                                        <div class="profileinfo">
                                            <h1> {{compte.nomCompte}}</h1>
                                            <h3>
                                            {% for secteur in compte.secteurs %}
                                                {{secteur.nom}}
                                            {% endfor %}
                                            </h3>

                                        </div>
                                        </div>
                                    </div>


                                {% endfor %} #}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row bottom-section">
                    <div class="col-lg-4 cree-par">
                        <span class="icon-user">
                            <img src="/images/icons/iconfinder_user.svg" alt="">
                        </span>
                        <div class="info-user">
                            <strong>Créé par :</strong>
                            <span class="name">
                            {# {{ created.nom}} {{created.prenom}} #}
                            </span>
                        </div>
                        <div class="date-user">
                            <label class="d-block datev">
                                 {# {{event.createdat|date('d/m/Y')}}   {{event.createdat|date('H:i')}} #}
                            </label>
                        </div>

                    </div>
                    <div class="col-lg-4 modifier-par">
                        <span class="icon-user">
                            <img src="/images/icons/iconfinder_user.svg" alt="">
                        </span>
                        <div class="info-user">
                            <strong>Modifié par :</strong>
                            <span class="name">
                                {# {{ updated.nom}} {{updated.prenom}} #}
                            </span>
                        </div>
                        <div class="date-user">
                            <label class="d-block datev">
                                 {{event.updatedat|date('d/m/Y')}}   {{event.updatedat|date('H:i')}}
                            </label>
                        </div>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}
