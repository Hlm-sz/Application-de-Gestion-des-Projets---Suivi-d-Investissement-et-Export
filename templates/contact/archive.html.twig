{% extends 'base.html.twig' %}

{% block title %}
	{{'contact.liste_contact_archives'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('contact_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
		{{'contact.Contacts'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('contact_index') }}">{{'contact.Back_to_list'| trans}}</a>
	<h4 class="navbar-text-color">{{'contact.liste_contact_archives'| trans}}</h4>
{% endblock %}
{% block body %}

	<div class="table-responsive">
		<table class="table" id="data-table">
			<thead>
				<tr>
					<th>{{'contact.Prenom'| trans}}</th>
					<th>{{'contact.Nom'| trans}}</th>
					<th>{{'contact.Statut'| trans}}</th>
					<th>{{'contact.Exclusif'| trans}}</th>
					<th>{{'contact.Profil'| trans}}</th>
					<th>{{'contact.Canal'| trans}}</th>
					<th>{{'contact.LanguePrincipale'| trans}}</th>
					<th>{{'contact.LangueSecondaire'| trans}}</th>
					<th>{{'contact.Actions'| trans}}</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>

	{% block javascripts %}
