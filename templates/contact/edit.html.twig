{% extends 'base.html.twig' %}

{% block title %}
	{{ 'contact.Edit_contact'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('contact_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'contact.titre_contact'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue save-btn" id="btn_submit" href="#">
		<i class="fa fa-save"></i>
	</a>
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ app.request.headers.get('referer') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'contact.Edit_contact'| trans}}</h4>
{% endblock %}
{% block third_header %}
	{{ include('contact/third_header/_third_header.html.twig') }}
	{{ form_start(form,{'attr':{'id':'form_contact'}}) }}
	{{ form_row(form._token) }}
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('css/_style.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}

	<div class="item-details wrape-contact-details">
		<div class="item-details-body item-details-contact item-bg-none">
			<div class="container item-details-header-body">
				<div class="row">
					<div class="col-sm"></div>
					<div class="col-sm">
						<div class="wrape-type-project"></div>
					</div>
					<div class="col-sm "></div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-8 content-info content-info-contact">
					<div class="header">
						<ul>
							<li class="active title-btn">
								Informations primaires
							</li>
						</ul>
					</div>
					<div class="item-details">

						<div class=" item-details-contact item-bg-none">
							<div class="tab-content cs-tab-content">
								<div class="container-fluid">
									<div class="row align-items-end mb-4">
										<div class="col-lg-2">
											<div class="form-group mb-0">
												<label class="cs-label">Prénom</label>

												{{ form_widget(form.prenom) }}
												{# <input value="{{contact.prenom}}" class="form-control" type="text"> #}
											</div>
										</div>

										<div class="col-lg-2">
											<div class="form-group mb-0">
												<label class="cs-label">Nom</label>
												{{ form_widget(form.nom) }}
												{# <input value="{{contact.nom}}" class="form-control" type="text"> #}

											</div>
										</div>
										<div class="col-lg-2">
											<div class="form-group mb-0">
												<label class="cs-label">Tél</label>

												{{ form_widget(form.tel) }}


											</div>
										</div>

										<div class="col-lg-4">
											<div class="form-group mb-0">
												<label class="cs-label">Email</label>

												{{ form_widget(form.email) }}
												{# <input value="{{contact.email}}" class="form-control" type="text"> #}
											</div>
										</div>
										<div class="col-lg-2">
											<div class="form-group mb-0">
												<label class="cs-label">Profil</label>

												{{ form_widget(form.profil,{selected : contact.profil}) }}
												{# <input value="{{carte.fonction}}" class="form-control" type="text">  #}
											</div>
										</div>

									</div>
									<div class="row align-items-end mb-4">
										<div class="col-lg-3">
											<div class="form-group mb-0">
												<label class="cs-label">Canal</label>
												{{ form_widget(form.canal) }}
											</div>
										</div>

										<div class="col-lg-3">
											<div class="form-group mb-2 d-flex justify-content-between align-items-center">
												<label class="cs-label mb-0">Exclusif</label>
												{# {{ form_widget(form.exclusif, {value : contact.exclusif,label:false,label_attr: {class: 'switch-custom'}})
																																				                                                }} #}
												<div class="custom-control custom-switch">
													<input type="checkbox" id="contact_data_exclusif" name="contact_data[exclusif]" class="custom-control-input" value="{{contact.exclusif}}">
													<label class="switch-custom custom-control-label" for="contact_data_exclusif"></label>
												</div>
											</div>
										</div>

										<div class="col-lg-3">
											<div class="form-group mb-0">
												<label class="cs-label">Langue principale</label>
												{{ form_widget(form.langugePrincipale) }}
											</div>
										</div>

										<div class="col-lg-3">
											<div class="form-group mb-0">
												<label class="cs-label">Langue secondaire</label>
												{{ form_widget(form.langueSecondaire) }}
											</div>
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
				<div
					class="col-lg-4 sidbar-compte">
					{# <div class="container">
															                        <div class="row"> #}
					<div class="comment  ">
						<div class="header">
							<ul>
								<li class="active title-btn">
									Commentaire
								</li>
							</ul>
						</div>
						<div class="container">
							<div class="form-group mb-4">
								<label class="cs-label">Détails libres</label>
								<textarea rows="5" class="form-control" placeholder="Lorem ipsum"></textarea>
							</div>
						</div>
						{#  </div>
																		                        </div> #}
					</div>
				</div>
				<!-- End Sidebar compte -->
			</div>
			<!-- End first Row Contacte -->

			<script>
				$("#projet_data_Confidentiel,#projet_data_Prioritaire").css("display", "none");
			</script>

			<script src="{{ asset('js/contacts.js') }}"></script>
			{% block javascripts %}
				<script>
					$("#btn_submit").click(function () {
$("#form_contact").submit();
});
				</script>
			{% endblock %}
			{% for message in app.flashes('notice') %}
				<script>
					Swal.fire({
position: 'top-end',
icon: 'success',
title: 'vos changements ont été bien enregistrés.',
showConfirmButton: false,
timer: 3000
})
				</script>


			{% endfor %}
			<script type="text/javascript" src="{{ asset('js/bloodhound.jquery.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/typeahead.jquery.min.js') }}"></script>
		{% endblock %}
