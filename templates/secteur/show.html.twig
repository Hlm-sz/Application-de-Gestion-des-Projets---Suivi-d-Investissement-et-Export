{% extends 'base.html.twig' %}

{% block title %}
	{{'secteur.Detail_secteur'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('secteur_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'secteur.Secteur'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}

	<a class="btn btn-blue" href="{{ path('secteur_edit', {'id': secteur.id}) }}">{{'secteur.Edit'| trans}}</a>

	{{ include('secteur/_delete_form.html.twig') }}

{% endblock %}
{% block navbar_left %}

	<a class="btn btn-blue" href="{{ path('secteur_index') }}">{{ 'secteur.Back_to_list'| trans }}</a>
	<h4 class="navbar-text-color">{{ 'secteur.Detail_secteur'| trans }}</h4>

{% endblock %}
{% block body %}

	<div class="card">

		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>{{'secteur.Nom'| trans}}</th>
						<td>{{ secteur.nom }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
