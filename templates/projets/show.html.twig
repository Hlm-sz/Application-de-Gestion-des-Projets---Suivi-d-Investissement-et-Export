{% extends 'base.html.twig' %}

{% block title %}
	{{ 'projet.Detail_projet'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('projets_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'projet.titre_projet'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block header_search %}
	{# <form class="form-inline" action="{{ path('projets_index') }}" method="get">
		<input class="form-control mr-sm-2" name="search" type="search" placeholder="Chercher" aria-label="Chercher">
	</form> #}
{% endblock %}
{% block navbar_right %}

	<a class="btn btn-blue" href="{{ path('projets_edit', {'id': projet.id}) }}">{{ 'role.Edit'| trans }}</a>

{% endblock %}
{% block navbar_left %}

	<a class="btn btn-blue" href="{{ path('projets_index') }}">{{ 'projet.Back_to_list'| trans }}</a>
	<h4 class="navbar-text-color">{{ 'projet.Detail'| trans }}</h4>

{% endblock %}
{% block body %}
	<div class="card">

		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>Compte</th>
						<td>{{ projet.compte.nomCompte }}</td>
					</tr>

					<tr>
						<th>Contacts</th>
						<td>
							{% for contact in projet.compte.contact %}
								{{ contact.prenom ~' '~ contact.nom| nl2br }}
							{% endfor %}
						</td>


					</tr>

					<tr>
						<th>Type</th>
						<td>{{ projet.typeProjet.nom }}</td>
					</tr>

					<tr>
						<th>Géré par</th>
						<td>{{ projet.gerePar.prenom ~' '~ projet.gerePar.nom }}</td>
					</tr>
					<tr>
						<th>Status</th>
						<td>{{ projet.etatProjet.nom }}</td>
					</tr>
					<tr>
						<th>GPAC</th>
						<td>{{ projet.GPAC ?'Oui':'non' }}</td>
					</tr>

					{% for key,value in detail_projet %}
						<tr>
							<th>{{ key }}</th>
							<td>{{ value }}</td>
						</tr>

						{% else %}

					{% endfor %}

				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
