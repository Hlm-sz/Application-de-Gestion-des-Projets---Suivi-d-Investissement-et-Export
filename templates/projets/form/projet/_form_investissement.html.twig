

<div class="col-lg-8  content-info info-projet">

    <div class="header">
        <ul class="form-project form-project-invest">
            <li class=" active title-btn linkInfo capitalize" id="#info-primaire" onclick="openInfo(event, 'info-prim')">informations primaires</li>
            <li class="title-btn linkInfo capitalize" id="#info-invest" onclick="openInfo(event, 'info-invest')">informations Investissement</li>
        </ul>

    </div>
    <div class="item-details " >

        <div class="item-details-body ">

            <div class="tab-content cs-tab-content no-left-padding no-right-padding info-displayed" id="info-prim">
                <div class="tab-pane fade show active" id="item-details-project" role="tabpanel">
                    <div class="row align-items-end mb-4">
                        <div class="col-lg-6">
                            <div class="form-group mb-0">

                                    <label class="cs-label mb-0">Intitulé</label>

                                    {{ form_widget(form.Denomination_projet) }}

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-2 d-flex justify-content-between align-items-center">
                                        <label class="cs-label mb-0">Confidentiel</label>
                                        <span class="lock" alt="Confidentiel" title="Confidentiel">
                                            <img src="{{ asset('images/icons/lock.svg') }}" alt=""></span>

                                       {#  <label class="cs-checkbox">
                                            {{ form_widget(form.Confidentiel) }}
                                            <span>&nbsp;</span>
                                        </label> #}
                                        {{ form_row(form.Confidentiel, {label_attr: {class: 'switch-custom'} }) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-2 d-flex justify-content-between align-items-center">
                                         <label class="cs-label mb-0">Stratégique</label>
                                         <span class="trace" alt="Prioritaire" title="Prioritaire">
                                             <img src="{{ asset('images/icons/Trace.svg') }}" alt=""></span>
                                        {#<label class="cs-checkbox">
                                            {{ form_widget(form.Prioritaire) }}f
                                            <span>&nbsp;</span>
                                        </label> #}
                                        {{ form_row(form.Prioritaire, {label_attr: {class: 'switch-custom'} }) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group mb-4">
                                <label class="cs-label">{{ form_label(form.Secteur) }}</label>
                                {{ form_widget(form.Secteur ,{'attr': {'class': 'form-group Secteur'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                <label class="cs-label">{{ form_label(form.Localisation) }}</label>
                               	{{ form_widget(form.Localisation ,{'attr': {'class': 'form-group Localisation'}}) }}
                            </div>
                            <div class="form-group mb-4">
                                <label class="cs-label">{{ form_label(form.Province) }}</label>
                                {{ form_widget(form.Province ,{'attr': {'class': 'form-group Province'}}) }}
                            </div>
                            <div class="form-group">
                                <label class="cs-label">{{ form_label(form.Documents) }}</label>
                                <label class="cs-input-file mb-2">
                                    {{ form_widget(form.Documents,{'attr':{'class':'file'}}) }}
                                </label>
                                	{% for data in projet.projetsData %}
                                    {% if(data.cle == "Documents") %}
                                        <a  href="{{ asset("uploads/"~ (data.value)) }}" target="_blink">
                                        {{data.value}}
                                        </a> <span class="" id="{{data.id}}" onclick="confirmeRemProjet(this.id)">
                                            <i class="fa fa-trash"></i>
                                        </span>
                                    {% endif %}
                                    {% endfor %}
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group mb-4">
                                <label class="cs-label">{{ form_label(form.Description_projet) }}</label>
                                {{ form_widget(form.Description_projet,{'attr':{'rows':5}}) }}
                            </div>
                            <div class="form-group">
                                <label class="cs-label">{{ form_label(form.details_libres) }}</label>
                                {{ form_widget(form.details_libres,{'attr':{'rows':5}}) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div> {#  End tab-content One #}
            <div class="tab-content cs-tab-content no-left-padding no-right-padding info-displayed" id="info-invest">
                <div class="tab-pane fade show active" id="item-details-project" role="tabpanel">
                    <div class="row align-items-end mb-4">
                        <div class="col-lg-6">
                                <label class="cs-label">{{ form_label(form.pays_invest) }}</label>
                            <div class="form-group" >
                                {{ form_widget(form.pays_invest ,{'attr': {'class': 'form-group pays_invest'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.type_invest) }}</label>
                                {{ form_widget(form.type_invest) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.mantant_invest) }}</label>
                                {{ form_widget(form.mantant_invest,{ 'attr':{'step':'any'} }) }}
                                {{ form_errors(form.mantant_invest) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.nb_emplois_directs_invest) }}</label>
                                {{ form_widget(form.nb_emplois_directs_invest) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.nb_emplois_Indirects_invest) }}</label>
                                {{ form_widget(form.nb_emplois_Indirects_invest) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.nb_emplois_Induits_invest) }}</label>
                                {{ form_widget(form.nb_emplois_Induits_invest) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.horizon_projet_invest) }}</label>
                                {{ form_widget(form.horizon_projet_invest ,{'attr': {'class': 'form-group horizon_projet_invest'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.mecanisme_accomp_invest) }}</label>
                                {{ form_widget(form.mecanisme_accomp_invest ,{'attr': {'class': 'form-group mecanisme_accomp_invest'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group" >
                                <label class="cs-label">{{ form_label(form.localisation_invest) }}</label>
                                {{ form_widget(form.localisation_invest,{'attr':{'rows':5}}) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div> {#  End tab-content Tow #}

        </div> {# End Iteme detail Body #}
    </div>

</div>
<script>
$(document).ready(function() {
 	$('.Localisation').select2();
    $('.Province').select2();
	$('.Secteur').select2();
	$('.pays_invest').select2({
        width: '100%'
    });
    $('.horizon_projet_invest').select2({width: '100%'});
    $('.mecanisme_accomp_invest').select2({width: '100%'});
});
</script>