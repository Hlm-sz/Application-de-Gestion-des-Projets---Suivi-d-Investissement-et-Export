  <script>
function Gpacinvest_action() {
            var date_actions_gpac = $("#projet_data_date_actions_gpac").val();
            var details_libres_actions_gpac = $("#projet_data_details_libres_actions_gpac").val();
            var Type_accompagnement_actions_gpac = $("#projet_data_Type_accompagnement_actions_gpac").val();
            var incitations = $("#projet_data_incitations").val();
            var informations_supplementaires_actions_gpac = $("#projet_data_informations_supplementaires_actions_gpac").val();
            var situation_projet_actions_gpac = $("#projet_data_situation_projet_actions_gpac").val();
            $url = "{{path('gpac_investisseure_action')}}";
            $.ajax({
                type: "POST",
                url: $url,
                data: {
                    date_actions_gpac: date_actions_gpac,
                    details_libres_actions_gpac: details_libres_actions_gpac,
                    Type_accompagnement_actions_gpac: Type_accompagnement_actions_gpac,
                    incitations: incitations,
                    informations_supplementaires_actions_gpac: informations_supplementaires_actions_gpac,
                    situation_projet_actions_gpac: situation_projet_actions_gpac,
                    pid: {{projet.id}}
                },
                dataType: "json",
                success: function (response) {
                    document.location.href = ("/projets/projet/" + response.projet_id);
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'vos changements ont été bien enregistrés.',
                        showConfirmButton: false,
                        timer: 3000
                    })
                },
                error: function (response) {
                    // alert("error !" + response);
                }
            });
        }
</script>