      <tr>
          <td class="tg-tf2e" >
              <label class="cs-label">Status</label>
              {% for x in projet.projetsData %}
                  {% if x.cle == "statut_projet" %}
                      <p> {{ x.value }} </p>
                  {% endif%}
              {% endfor %}
          </td>
          <td class="tg-tf2e" >
              <label class="cs-label">Type de requête</label>
              {% for x in projet.projetsData %}
                  {% if x.cle == "type_requete" %}
                      <p> {{ x.value }} </p>
                  {% endif%}
              {% endfor %}
          </td>
          <td class="tg-tf2e" >
              <label class="cs-label">Exportateur</label>
              {% for x in projet.projetsData %}
                  {% if x.cle == "exportateur" %}
                      <p> {{ x.value }} </p>
                  {% endif%}
              {% endfor %}
          </td>
          <td class="tg-tf2e" >
              <label class="cs-label">Montant projet</label>
              {% for x in projet.projetsData %}
                  {% if x.cle == "montant_projet" %}
