<table class="tg">
<tbody>

  <tr>
    <td class="tg-0lax" colspan="2">
        <label class="cs-label mb-0">Intitulé</label>
        <p>{{ projet.titre }}</p>
    </td>
    <td class="tg-0lax" colspan="2">
        <label class="cs-label mb-0">Responsable </label>
        <p>{{ projet.GerePar.nom }} {{ projet.GerePar.prenom }}</p>
    </td>
   </tr>
   <tr>
    <td class="tg-tf2e">
    <label class="cs-label mb-0">Confidentiel</label>
        {% if projet.confidentiel %}
            <p> Oui </p>
        {% else %}
            <p> Non </p>
        {% endif %}
    </td>
    <td class="tg-0lax">
    <label class="cs-label mb-0">Prioritaire</label>
        {% for x in projet.projetsData %}
            {% if x.cle == "Prioritaire" %}
                {% if x.value %}
                    <p>Oui</p>
                {% else%}
                    <p>Non</p>
                {% endif%}
            {% endif %}
        {% endfor %}
    </td>
    <td class="tg-tf2e">
    <label class="cs-label">Statut de projet</label>
        {% for key,value in projet.status %}
        <p>{{key|e }}</p>
        {% endfor %}
    </td>
       <td class="tg-0lax">
           <label class="cs-label">GPAC</label>
           {% if projet.GPAC == false %}
               <p>Désactivé</p>
           {% else %}
               <p>Activé</p>
           {% endif %}
       </td>
  </tr>
  <tr>
      <td class="tg-tf2e" colspan="2">
          <label class="cs-label">Secteur</label>
          {% for p in projet.projetsData %}
              {% if p.cle == "secteur_sou"%}
                  {% for s in Secteur %}
                      {% if p.value == s.id %}
                          <p> {{ s.nom}} </p>
                      {% endif %}
                  {% endfor %}
              {% endif %}
          {% endfor %}

      </td>
    <td class="tg-tf2e" colspan="2">
    <label class="cs-label">Compte</label>
        <div class="form-group">
        {{ projet.compte.nomCompte }}
        </div>
    </td>
  </tr>
   <tr>
    <td class="tg-0lax" colspan="4">
        <label class="cs-label">Description du projet</label>
        {% for x in projet.projetsData %}
            {% if x.cle == "Description_projet" %}
                <p>{{ x.value}}</p>
            {% endif %}
        {% endfor %}
    </td>
   </tr>
   <tr>
    <td class="tg-tf2e" colspan="4">
        <label class="cs-label">Détails libres sur le projet</label>
        {% for x in projet.projetsData %}
            {% if x.cle == "details_libres" %}
                <p>{{ x.value}}</p>
            {% endif %}
        {% endfor %}
    </td>
  </tr>
  <tr>
      <th class="tg-tf2e" colspan="4"><h4><strong>Phase d'interêt</strong></h4> </th>
  </tr>
  <tr>
      <td class="tg-0lax">
          <label class="cs-label">Date </label>
          {% for p in projet.projetsData %}
              {% if p.cle == "date_sou" %}
                  <p>{{ p.value }}</p>
              {% endif %}
          {% endfor %}
      </td>
      <td class="tg-0lax" colspan="2">
          <label class="cs-label">Objet</label>
          {% for p in projet.projetsData %}
              {% if( p.cle == "objet_sou") %}
                  <p>{{ p.value }}</p>
              {% endif %}
          {% endfor %}
      </td>
      <td class="tg-0lax">
          <label class="cs-label">Action</label>
          {% for p in projet.projetsData %}
              {% if(p.cle == "action_sou") %}
                  <p>{{ p.value }}</p>
              {% endif %}
          {% endfor %}
      </td>

  </tr>
  <tr>
      <td class="tg-0lax" colspan="4">
          <label class="cs-label">Détails</label>
          {% for p in projet.projetsData %}
              {% if(p.cle == "details_libres_sou") %}
                  <p>{{ p.value }}</p>
              {% endif %}
          {% endfor %}
      </td>
  </tr>
  <tr>
      <th class="tg-tf2e" colspan="4"><h4><strong>Phase décision</strong> </h4></th>
  </tr>

   <tr>
    <td class="tg-0lax" colspan="2">
        <label class="cs-label"> Date Décision </label>
        {% for x in projet.projetsData %}
            {% if x.cle == "date_decision" %}
                <p>{{ x.value }} </p>
            {% endif %}
        {% endfor %}
    </td>
    <td class="tg-tf2e" colspan="2">
        <label class="cs-label mb-0">Abouti</label>
        {% for x in projet.projetsData %}
            {% if x.cle == "Aboutisou" %}
                {% if x.value %}
                    <p> Oui </p>
                {% endif%}
            {% elseif x.cle == "NAboutisou"%}
                    {% if x.value %}
                    <p>Non</p>
                     {% endif%}
            {% endif %}
        {% endfor %}
    </td>
  </tr>
  <tr>
      <td class="tg-tf2e" colspan="4">
          <label class="cs-label">Détails libres</label>
          {% for x in projet.projetsData %}
              {% if x.cle == "details_libres_sou_decision" %}
                  <p> {{ x.value }} </p>
              {% endif%}
          {% endfor %}
      </td>
  </tr>
  {% for x in projet.projetsData %}
      {% if x.cle == "Aboutisou" %}
          {% if x.value %}
              <tr>
                  <td class="tg-0lax">  <label class="cs-label mb-0">Commande</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "Commandesou" %}
                              {% if x.value %}
                                  <p> Oui </p>
                              {% else%}
                                  <p>Non</p>
                              {% endif%}
                          {% endif %}
                      {% endfor %}
                  </td>

                  <td class="tg-tf2e">
                      <label class="cs-label mb-0">Signature de contrat</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "Signaturedecontrat" %}
                              {% if x.value %}
                                  <p> Oui </p>
                              {% else%}
                                  <p>Non</p>
                              {% endif%}
                          {% endif %}
                      {% endfor %}
                  </td>
                  <td class="tg-tf2e">
                      <label class="cs-label mb-0"> Création Plateforme locale </label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "plateformelocal" %}
                              {% if x.value %}
                                  <p>Oui</p>
                              {% else%}
                                  <p>Non</p>
                              {% endif%}
                          {% endif %}
                      {% endfor %}
                  </td>

                  <td class="tg-0lax">
                      <label class="cs-label mb-0">PV de clôture</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "pvcloture" %}
                              {% if x.value %}
                                  <p>Oui</p>
                              {% else%}
                                  <p>Non</p>
                              {% endif%}
                          {% endif %}
                      {% endfor %}
                  </td>
              </tr>
              <tr>
                  <td class="tg-tf2e" >
                      <label class="cs-label mb-0">Date de signature du contrat </label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "date_signature_sou" %}
                              <p> {{ x.value }} </p>
                          {% endif %}
                      {% endfor %}
                  </td>
                  <td class="tg-0lax" >
                      <label class="cs-label mb-0">Type de document</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "type_doc_sour" %}
                              <p> {{ x.value }} </p>
                          {% endif %}
                      {% endfor %}
                  </td>

                  <td class="tg-tf2e">
                      <label class="cs-label mb-0">Date signature PV</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "date_signature_pv" %}
                              <p> {{ x.value }} </p>
                          {% endif %}
                      {% endfor %}
                  </td>
                  <td class="tg-0lax" >
                      <label class="cs-label" >Comptes </label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "comptes_eido" %}
                              {% for c in listComptes %}
                                  {% for l in x.value|slice(1,-1)|split(',') %}
                                      {% if c.id == l %}
                                          <p> - {{ c.nomCompte }}</p>
                                      {% endif %}
                                  {% endfor%}
                              {% endfor %}
                          {% endif %}
                      {% endfor %}
                  </td>
              </tr>
          {% endif%}
      {% elseif x.cle == "NAboutisou"%}
          {% if x.value %}
              <tr>
                  <td class="tg-tf2e" colspan="2">
                      <label class="cs-label mb-0">Date PV cloture non abouti</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "date_pv_cloture_nabouti_sou" %}
                              <p> {{ x.value }} </p>
                          {% endif %}
                      {% endfor %}
                  </td>
                  <td class="tg-0lax" colspan="2">
                      <label class="cs-label">Motif</label>
                      {% for x in projet.projetsData %}
                          {% if x.cle == "Motif_sou" %}
                              <p> {{ x.value }} </p>
                          {% endif %}
                      {% endfor %}
                  </td>
              </tr>
          {% endif%}
      {% endif %}
  {% endfor %}




