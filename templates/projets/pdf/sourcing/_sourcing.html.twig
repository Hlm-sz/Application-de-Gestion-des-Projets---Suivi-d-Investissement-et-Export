   <tr>
    <td class="tg-0lax">
        <label class="cs-label">Date</label>
        {% for x in projet.projetsData %}
        {% if x.cle == "date_decision_sou" %}
            <p> {{ x.value }} </p>
        {% endif %}
        {% endfor %}
    </td>
    <td class="tg-tf2e">
    <div class="form-group mb-2">
             <label class="cs-label">Référence</label>
        {% for x in projet.projetsData %}
        {% if x.cle == "reference_sou" %}
            <p> {{ x.value }} </p>
        {% endif %}
        {% endfor %}
         </div>
         </td>
    <td class="tg-0lax">
    <div class="form-group mb-2">
