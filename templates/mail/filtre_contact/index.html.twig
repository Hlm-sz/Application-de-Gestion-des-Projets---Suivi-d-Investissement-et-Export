	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{# {{ 'event.Events'| trans | upper }} #}
	{{ " Emailing " }}

	</div>
