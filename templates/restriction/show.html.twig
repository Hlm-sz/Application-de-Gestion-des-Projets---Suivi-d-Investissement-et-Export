{% extends 'base.html.twig' %}

{% block title %}
	{{ 'restriction.Detail_restriction'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('restriction_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'restriction.Restriction'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}

	<a class="btn btn-blue" href="{{ path('restriction_edit', {'id': restriction.id}) }}">{{ 'restriction.Edit'| trans }}</a>
	{{ include('restriction/_delete_form.html.twig') }}

{% endblock %}
{% block navbar_left %}

	<a class="btn btn-blue" href="{{ path('restriction_index') }}">{{ 'restriction.Back_to_list'| trans }}</a>
	<h4 class="navbar-text-color">{{ 'restriction.Detail_restriction'| trans }}</h4>

{% endblock %}
{% block body %}

	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>

					<tr>
						<th>{{ 'restriction.Nom'| trans }}</th>
						<td>{{ restriction.nom }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
