{% extends 'base.html.twig' %}

{% block title %}
	{{'profil.Detail'| trans}}
{% endblock %}

{% block sous_title %}
<a class="navbar-brand" href="{{ path('profils_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'profil.titre_profil'| trans | upper }}
	</div>
</a>
{% endblock %}
 
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('profils_edit', {'id': profil.id}) }}">{{'profil.Edit'| trans}}</a>
	{{ include('profils/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('profils_index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'profil.Detail'| trans}}</h4>
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>{{'profil.Profil'| trans}}</th>
						<td>{{ profil.nom }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
