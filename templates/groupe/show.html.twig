{% extends 'base.html.twig' %}

{% block title %}
	{{ 'groupe.Detail'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('groupe_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'groupe.titre_groupe'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('groupe_edit', {'id': groupe.id}) }}">{{ 'groupe.Edit'| trans }}</a>
	{{ include('groupe/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('groupe_index') }}">{{'groupe.Back_to_list'| trans}}</a>
	<h4 class="navbar-text-color">{{'groupe.Detail'| trans}}</h4>

{% endblock %}
{% block body %}

	<div class="card">
		<div class="card-body">

			<table class="table">
				<tbody>
					<tr>
						<th>{{ 'groupe.Groupe'| trans }}</th>
						<td>{{ groupe.nom }}</td>
					</tr>
					<tr>
						<th>{{ 'groupe.Roles'| trans }}</th>
						<td>
							{% for liste_roles in groupe.roles %}
								{{  liste_roles.role  }}
								<br>
							{% else %}
								{{ '' }}
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>{{ 'groupe.Restrictions'| trans }}</th>
						<td>
							{% for liste_restriction in groupe.restrictions %}
								{{  liste_restriction.nom  }}
								<br>
							{% else %}
								{{ '' }}
							{% endfor %}
						</td>
					</tr>


				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
