{% extends 'base.html.twig' %}

{% block title %}
    {{'contact.listes_contact'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('contact_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'contact.Contacts'| trans | upper }}
	</div>
</a>
{% endblock %}

{% block navbar_right %}

{% endblock %}
{% block navbar_left %}

{% endblock %}
{% block body %}

<div class="card-body">
    <table class="table">
        <thead>
        <tr>
            <th>Date imports</th>
            <th>Contacts</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for import in imports %}
            <tr>
                <td>{{ import.dateCreation |date('Y-m-d') }}</td>
                <td>
                    {% for contact in import.contacts %}
                        {{ contact.prenom ~ '  ' ~contact.nom }}<br>
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-btn-blue" href="{{ path('import_detail', {'id': import.id}) }}">Detail</a>
                    <a class="btn btn-btn-blue" href="{{ path('import_rollback', {'id': import.id}) }}">rollback</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'acces.Message_table'| trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
