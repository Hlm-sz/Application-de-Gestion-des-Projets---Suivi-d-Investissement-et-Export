{% extends 'base.html.twig' %}

{% block title %}
	{{'canal.Detail'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('canal_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'canal.Canal'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('canal_edit', {'id': canal.id}) }}">{{'canal.Edit'| trans}}</a>
	{{ include('canal/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('canal_index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'canal.Detail'| trans}}</h4>
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>{{'canal.Canal'| trans }}</th>
						<td>{{ canal.nom }}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
