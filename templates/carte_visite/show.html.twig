{% extends 'base.html.twig' %}

{% block title %}
	{{'carteVisite.Detail'| trans}}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('carte_visite_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{'carteVisite.titre_cv'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}
	<a class="btn btn-blue" href="{{ path('carte_visite_edit', {'id': carte_visite.id}) }}">{{'carteVisite.Edit'| trans}}</a>
	{{ include('carte_visite/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('carte_visite_index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	<h4 class="navbar-text-color">{{'carteVisite.Detail'| trans}}</h4>
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>{{'carteVisite.Contact'| trans}}</th>
						<td>{{ carte_visite.contact.prenom ~' '~ carte_visite.contact.nom }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Fonction'| trans}}</th>
						<td>{{ carte_visite.fonction }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Tel'| trans}}</th>
						<td>{{ carte_visite.tel }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Tel.2'| trans}}</th>
						<td>{{ carte_visite.tel2 }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Web'| trans}}</th>
						<td>{{ carte_visite.web }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Adresse'| trans}}</th>
						<td>{{ carte_visite.adresse }}</td>
					</tr>
					<tr>
						<th>{{'carteVisite.Email'| trans}}</th>
						<td>{{ carte_visite.email }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
