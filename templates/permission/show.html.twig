{% extends 'base.html.twig' %}

{% block title %}
	{{ 'acces.Detail_acces'| trans }}
{% endblock %}
{% block sous_title %}
<a class="navbar-brand" href="{{ path('permission_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'acces.Acces'| trans | upper }}
	</div>
</a>
{% endblock %}
{% block navbar_right %}

	<a class="btn btn-blue" href="{{ path('permission_edit', {'id': permission.id}) }}">{{ 'acces.Edit'| trans }}</a>
	{{ include('permission/_delete_form.html.twig') }}
{% endblock %}
{% block navbar_left %}
	<a class="btn btn-blue" href="{{ path('permission_index') }}">{{'acces.Back_to_list'| trans}}</a>
	<h4 class="navbar-text-color">{{'acces.Detail_acces'| trans}}</h4>

{% endblock %}
{% block body %}

	<div class="card">
		<div class="card-body">
			<table class="table">
				<tbody>

					<tr>
						<th>{{ 'acces.Nom'| trans }}</th>
						<td>{{ permission.nom }}</td>
					</tr>
					<tr>
						<th>{{ 'acces.Nom_constant'| trans }}</th>
						<td>{{ permission.nomConstant }}</td>
					</tr>
					<tr>
						<th>{{ 'acces.Active'| trans }}</th>
						<td>{{ permission.isActive ? 'Oui' : 'Non' }}</td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
