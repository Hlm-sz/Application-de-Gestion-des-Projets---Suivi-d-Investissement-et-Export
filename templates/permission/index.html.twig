{% extends 'base.html.twig' %}

{% block title %}
	{{ 'acces.Liste_Acces'| trans }}
{% endblock %}

{% block sous_title %}
<a class="navbar-brand" href="{{ path('permission_index') }}">
	<img src="{{ asset('images/amdie.png') }}" width="30" height="30" class="d-inline-block align-top"
		alt="logo">
		<div class="SousTitre">
		<strong>AMDIE</strong>
	|
	{{ 'acces.Acces'| trans | upper }}
	</div>
</a>
{% endblock %}

{% block navbar_right %}
	<li class="nav-item">
		<a href="{{ path('permission_new') }}" class="btn btn-float text-default btn-blue">
			<i class="icon-add"></i>
			<span>
				{{'user.Create_new'| trans}}</span>
		</a>
	</li>
{% endblock %}
{% block navbar_left %}{% endblock %}

{% block body %}

	<div class="table-responsive">
		<table class="table" id="data-table">
			<thead>
				<tr>
					<th>{{ 'acces.Nom'| trans }}</th>
					<th>{{ 'acces.Nom_constant'| trans }}</th>
					<th>{{ 'acces.Active'| trans }}</th>
					<th>{{ 'acces.Actions'| trans }}</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>


	{% block javascripts %}
		<script>
			$(document).ready(function () {

$('#data-table').DataTable({

"processing": true,
"serverSide": true,
"bDestroy": true,
"ajax": {
"url": "{{ path('ajax_permission') }}",
"type": 'POST'
},
"paging": true,
"info": true,
"searching": true,
"responsive": true,
"pageLength": 10,
"order": [
[0, 'asc']
],
columnDefs: [
{
"targets": 3,
"orderable": false
}
],
columns: [
{
"data": "nom"
}, {
"data": "nom_constant"
}, {
"data": "active"
}, {
"data": "actions"
}
],
"language": {
"sProcessing": "Traitement en cours...",
"sSearch": "Rechercher&nbsp;:",
"sLengthMenu": "Afficher &nbsp; : &nbsp; _MENU_",
"sInfo": "Affichage des &eacute;l&eacute;ments _START_ &agrave; _END_ sur _TOTAL_",
